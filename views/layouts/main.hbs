<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
    <a href="/"><button class="btn btn-dark">Главная</button></a>
    {{#if isAuth}}
        <a href="/logout"><button class="btn btn-dark">Выйти</button></a>
    {{else}}
        <a href="/login"><button class="btn btn-dark">Войти</button></a>
        <a href="/register"><button class="btn btn-dark">Регистрация</button></a>
    {{/if}}
    {{#if isAdministrator}}
        <a href="/admin"><button class="btn btn-dark">Админ панель</button></a>
    {{/if}}
    {{#if isAdmin}}
        <div class="wrapper">
            <aside class="main-sidebar sidebar-dark-primary elevation-4 admin-panel">
                <div class="sidebar">
                    <div class="user-panel mt-3 pb-3 mb-3"></div>
                    <div class="form-inline">
                        <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Поиск" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                        </div>
                    </div>

                    {{> adminPanel}}
                </div>
            </aside>

            <div class="content-wrapper">
                <section class="content">
                <div class="container-fluid">
                    {{{body}}}
                    <script src="/views/AdminLTE-3.1.0/plugins/jquery/jquery.min.js"></script>
                </div>
                </section>
            </div>
        </div>
    {{else}}
        {{{body}}}
    {{/if}}

    {{>scripts}}
</body>
</html>