<div class="container">
    <h1>Список ролей</h1>
    <div class="row">
        {{#if error}}
            <font color='red'>{{error}}</font>
        {{/if}}
        {{#each roles}}
            <div class="col-lg-6">
                <ul class="list-group">
                    <li class="list-group-item">
                        {{this.role}}
                    </li>
                </ul>
            </div>
            <div class="col-lg-2">
                <ul class="list-group">
                    <form action="/admin/roles/delete/{{this.id}}" method="post">
                        <input type="submit" class="btn btn-danger" value="Удалить роль">
                    </form>
                </ul>
            </div>
        {{/each}}
    </div>
</div>
