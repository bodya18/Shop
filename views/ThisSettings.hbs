<div class="row col col-lg-6">
    <form action="/admin/settings/set" method="post" enctype="multipart/form-data">
        
        <br><br><br><br>
            {{#if error}}
                <font color="red">{{error}}</font>
            {{/if}}
        <input type="hidden" name="id" value="{{settings.id}}">
        
        {{#if isNum}}
        <div class="col-lg-6">
            <p>Введите процент прибыли</p>
            <input type="number" class="form-control" name="value" value="{{settings.value}}">
        </div>
        {{/if}}
        
        {{#if isMultiFile}}
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Выберите изображения на слайдер главной страницы</label>
                <input class="form-control" type="file" id="formFileMultiple" multiple name="value">
            </div>
        {{/if}}
        
        {{#if isSingleFile}}
            <div class="mb-3">
                <label for="formFile" class="form-label">Выберите изображение на шапку сайта</label>
                <input class="form-control" type="file" id="formFile" name="value">
            </div>  
        {{/if}}
        {{#if isText}}
            <textarea id="editor" name="value">{{settings.value}}</textarea>
        {{/if}}
        {{#if isProduct}}
            <label for="id_label_multiple">
                Выберите товары

                <select class="js-example-basic-multiple js-states form-control" id="id_label_multiple" name="value" multiple="multiple">
                    {{#each products}}
                        <option value="{{this.id}}">{{this.title}}</option>
                    {{/each}}
                </select>
            </label>
        {{/if}}
        {{#if isSeo}}
            <div class="row">
                <div class="col col-lg-6">
                    <label for="og_title" class="form-label">og:title</label>
                    <input type="text" class="form-control" id="og_title" name="og_title" value="{{og_title}}">
                </div>
                <div class="col col col-lg-6">
                    <label for="og_description" class="form-label">og:description</label>
                    <textarea name="og_description" class="form-control" id="og_description" rows="10">{{og_description}}</textarea>
                </div>
            </div>
        {{/if}}
        <br><br>
        <input type="hidden" name="type_value" value="{{settings.type_value}}">
        <input type="submit" class="btn btn-success" value="Задать настройку">
    </form>
</div>